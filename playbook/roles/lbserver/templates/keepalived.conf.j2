      state MASTER
    {% else %}
      state BACKUP
    {% endif %}
    interface enp0s8
    virtual_router_id 51
    {% if ansible_hostname == 'vip01' %}
    priority 101
    {% else %}
    priority 100
    {% endif %}
    advert_int 2
    virtual_ipaddress {
        10.11.12.50
    }
}
